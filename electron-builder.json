{
  "productName": "neuralium.wallet",
  "directories": {
    "output": "release/",
    "buildResources" : "assets"
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!neuralium/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "dist",
    "artifactName": "${productName}-windows.${ext}",
    "target": [
      "zip"
    ]
  },
  "mac": {
    "icon": "icon.png",
    "artifactName": "${productName}-macos.${ext}",
    "target": [
      "dir"
    ],
    "extraFiles" : [{"from": "packaging/neuralium/mac", "to" : "neuralium", "filter": ["**/*"]}]
  },
  "linux": {
    "icon": "dist",
    "executableName" : "Neuralium.Wallet",
    "artifactName": "${productName}-linux.${ext}",
    "category" : "Office",
    "target": [
      "tar.gz"
    ]
  },
  "afterPack": "./afterPackHook.js"
}
