{
  "productName": "neuralium.wallet",
  "directories": {
    "output": "release/",
    "buildResources" : "assets"
  },
    "files": [
        "**/*",
        "assets/**",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!neuralium/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "dist/favicon.512x512.png",
    "artifactName": "${productName}-windows.${ext}",
    "target": [
      "zip"
    ],
    "extraFiles" : [{"from": "/var/tmp/neuralium/builds/win-x64", "to" : "neuralium", "filter": ["**/*"]}]
  },
 // "afterSign": "electron-builder-notarize",

 "mac": {
  "icon": "icon.png",
  "hardenedRuntime": false,
    "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist",
  "artifactName": "${productName}-macos.${ext}",
  "target": [
    "dir"
  ],
    "extraFiles" : [{"from": "/var/tmp/neuralium/builds/osx-x64", "to" : "neuralium", "filter": ["**/*"]}]
  },
  "linux": {
    "icon": "dist",
    "executableName" : "Neuralium.Wallet",
    "artifactName": "${productName}-linux.${ext}",
    "category" : "Office",
    "target": [
      "zip"
    ],
    "extraFiles" : [{"from": "/var/tmp/neuralium/builds/linux-x64", "to" : "neuralium", "filter": ["**/*"]}]
  }
}
